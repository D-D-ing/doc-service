pipeline {
    agent {label 'docker'}
    stages {
        stage('Unit-Test') {
            steps {
               echo "Run unit-tests:"
               sh "docker-compose build test"
               sh "docker run doc-service_test:latest"
            }
          post {
                always  {
                junit 'results/results.xml'
            }
            }
          }
        stage('Build') {
            steps {
                sh "sudo docker build -t doc_server:latest src/."
            }
        }


        stage('Deploy') {
            steps {
            echo "Sometimes we will deploy something..."
            }
        }
    }
}
